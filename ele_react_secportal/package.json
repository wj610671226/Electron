{
  "name": "ele_react_demo",
  "version": "0.1.0",
  "private": true,
  "main": "./main/main.js",
  "description": "The application description",
  "author": {
    "name": "westone",
    "email": "835532412@qq.com"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently \"wait-on http://localhost:3000 && electron .\" \"cross-env BROWSER=none yarn start\" ",
    "devMain": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "prepack": "yarn run build && npm run buildMain",
    "predist": "yarn run build && npm run buildMain",
    "buildMain": "webpack"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "antd": "^4.16.13",
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3",
    "electron": "^15.3.0",
    "electron-builder": "^22.13.1",
    "net": "^1.0.2",
    "normalize.css": "^8.0.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "styled-components": "^5.3.3",
    "wait-on": "^6.0.0",
    "web-vitals": "^1.0.1",
    "webpack-cli": "^4.9.1"
  },
  "build": {
    "appId": "com.westone.eledemo",
    "productName": "electron demo",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "copyright": "Copyright Â© 2021 ${author}",
    "extends": null,
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "./src/config/*/*",
      "./src/winpage/*",
      "./src/assets/img/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraMetadata": {
      "main": "./build/main.js"
    },
    "dmg": {
      "background": "assets/appdmg.png",
      "icon": "assets/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "win": {
      "target": [
        "msi",
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-Web-Setup-${version}.${ext}",
      "publisherName": "Viking Zhang"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    }
  },
  "homepage": "./"
}
